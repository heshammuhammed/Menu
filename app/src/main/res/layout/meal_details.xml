<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/mealimage"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/noimage" />

    <TextView
        android:id="@+id/mealname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mealimage"
        android:layout_below="@+id/mealimage"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="L Saro5"
        android:textColor="#D04F53"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/mealprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif"
        android:layout_above="@+id/mealdetails"
        android:layout_alignEnd="@+id/mealimage"
        android:text="100 LE"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/mealdetails"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_alignEnd="@+id/mealimage"
        android:layout_alignStart="@+id/mealname"
        android:layout_below="@+id/mealname"
        android:layout_marginTop="12dp"
        android:text="FLFL Romy"
        android:textSize="12sp" />

</RelativeLayout>